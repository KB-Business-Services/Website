---
import Button from "./ui/button.astro";
---

<form
  method="POST"
  id="contact"
  class="needs-validation"
  data-astro-reload
  data-netlify="true"
  action="/contact_success"
  netlify-honeypot
  data-netlify-recaptcha="true"
  >
  <input type="checkbox" class="hidden" style="display:none" name="botcheck" />
  <p>Full Name:</p>
  <div class="mb-5">
    <input
      type="text"
      placeholder="Full Name"
      required
      class="w-full px-4 py-3 border placeholder:text-slate-400 rounded-md outline-none focus:ring-4 border-slate-300 focus:border-slate-600 ring-slate-100"
      name="full_name"
    />
    <div class="empty-feedback invalid-feedback text-red-400 text-sm mt-1">
      Please provide your full name.
    </div>
  </div>
  <div class="mb-5">
    <p>Email Address:</p>
    <label for="email_address" class="sr-only">Email Address</label><input
      id="email_address"
      type="email"
      placeholder="Email Address"
      name="email"
      pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$"
      required
      class="w-full px-4 py-3 border placeholder:text-slate-400 rounded-md outline-none focus:ring-4 border-slate-300 focus:border-slate-600 ring-slate-100"
    />
    <div class="empty-feedback text-red-400 text-sm mt-1">
      Please provide your email address.
    </div>
    <div class="invalid-feedback text-red-400 text-sm mt-1">
      Please provide a valid email address.
    </div>
  </div>
  <div class="mb-5">
    <p>Phone Number:</p>
    <input
      type="tel"
      placeholder="Phone Number"
      required
      class="w-full px-4 py-3 border placeholder:text-slate-400 rounded-md outline-none focus:ring-4 border-slate-300 focus:border-slate-600 ring-slate-100"
      name="phone_number"
      pattern="[\+]\d{2}[\(]\d{2}[\)]\d{4}[\-]\d{4}"
    />
    <div class="empty-feedback invalid-feedback text-red-400 text-sm mt-1">
      Please provide your phone number.
    </div>
  </div>
  <div class="mb-5">
    <p>Select a Service:<p>
    <radio-group name="subject" required>
      <label class="flex items-center mb-3">
        <input
          type="radio"
          name="contact_form"
          value="Business Consulting"
          required
        />
        <span class="ml-2">Business Consulting</span>
      </label>
      <label class="flex items-center mb-3">
        <input
          type="radio"
          name="contact_form"
          value="Strategic Planning"
        />
        <span class="ml-2">Strategic Planning</span>
      </label>
      <label class="flex items-center mb-3">
        <input
          type="radio"
          name="contact_form"
          value="Grant Writing"
        />
        <span class="ml-2">Grant Writing</span>
      </label>
      <label class="flex items-center mb-3">
        <input
          type="radio"
          name="contact_form"
          value="Program Development"
        />
        <span class="ml-2">Program Development</span>
      </label>
      <label class="flex items-center mb-3">
        <input
          type="radio"
          name="contact_form"
          value="Leadership Development"
        />
        <span class="ml-2">Leadership Development</span>
      </label>
      <label class="flex items-center mb-3">
        <input
          type="radio"
          name="contact_form"
          value="Immigration Advising"
        />
        <span class="ml-2">Immigration Advising</span>
      </label>
      <label class="flex items-center mb-3">
        <input
          type="radio"
          name="contact_form"
          value="Academic Mentoring"
        />
        <span class="ml-2">Academic Mentoring</span>
      </label>
      <label class="flex items-center mb-3">
        <input
          type="radio"
          name="contact_form"
          value="Editorial Services"
        />
        <span class="ml-2">Editorial Services</span>
      </label>
      <label class="flex items-center mb-3">
        <input type="radio" name="contact_form" value="Other"/>
        <span class="ml-2">Other</span>
      </label>
    </radio-group>
  </div>
  <div class="mb-5">
    <div class="mb-3">
      <p>Tell us about your request:</p>
      <textarea
        name="message"
        required
        placeholder="Please write your request."
        class="w-full px-4 py-3 border placeholder:text-slate-400 rounded-md outline-none h-36 focus:ring-4 border-slate-300 focus:border-slate-600 ring-slate-100"
      ></textarea>
      <div class="empty-feedback invalid-feedback text-red-400 text-sm mt-1">
        Please write your request.
      </div>
    </div>
    <div data-netlify-recaptcha="true"/>
    <Button type="submit" size="lg" block>Send Message</Button>
    <div id="result" class="mt-3 text-center"></div>
  </div>

  <style>
    .invalid-feedback,
    .empty-feedback {
      display: none;
    }

    .was-validated :placeholder-shown:invalid ~ .empty-feedback {
      display: block;
    }

    .was-validated :not(:placeholder-shown):invalid ~ .invalid-feedback {
      display: block;
    }

    .is-invalid,
    .was-validated :invalid {
      border-color: #dc3545;
    }
  </style>
</form>
