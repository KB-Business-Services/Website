---
import Container from "@components/container.astro";
import { Picture } from "astro:assets";
import EmployeeImg from "../assets/employee.jpg";
import Heading from "../components/heading.astro";
---
<Container>
<div class="grid sm:grid-cols-2 gap-10 mx-auto mt-24">
    <div class="relative">
      <div
        class="absolute hidden md:block w-96 h-96 bg-[#307d7e] rounded-full right-0 top-1/3 -z-10">
      </div>
      <div
        class="absolute hidden md:block w-44 h-44 bg-[#307d7e] rounded-full left-10 top-1/4 -z-10">
      </div>
      <Picture
        formats={["avif", "webp"]}
        src={EmployeeImg}
        alt="Happy Team"
        class="rounded-xl w-full max-w-md mx-auto shadow-2xl"
        loading="lazy"
      />
    </div>
    <div class="place-self-center">
      <h2 class="text-5xl text-gray-800 tracking-tight -mt-2"><Heading id="mission"/>
        <strong>Our
        {" "}
        <span class="text-[#307d7e]">Mission</strong></span>
      </h2>
      <p class="text-lg max-w-xl mt-4 leading-relaxed text-slate-500">
        At KB Business Services, LLC, we are dedicated to empowering
        organizations and individuals to achieve their full potential through
        comprehensive business consulting, strategic planning, and tailored
        services. We strive to foster innovation, promote growth, and create
        sustainable solutions that drive success in a rapidly evolving global
        landscape.
      </p>
    </div>
  </div>
  </Container>