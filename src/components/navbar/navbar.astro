---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import Picture from "astro/components/Picture.astro";
import Logo from "@assets/logo.png"
import { StickyHeader, Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  
  {
    title: "About Us",
    path: "/about",
    children: [
      { title: "About Us", path: "/about" },
      { title: "Our Mission", path: "/about/#mission" },
      { title: "Our Vision", path: "/about/#vision" },
      { title: "Our Values", path: "/about/#values" },
      { title: "Our Story", path: "/about/#story" },
      { title: "Diversity Statement", path: "/about/#diversity-statement" },
      { title: "Meet The Team", path: "/about/#team" },
    ],
  },
  
  {
    title: "Our Services",
    path: "/services",
    children: [
      { title: "Our Services", path: "/services" },
      { title: "Business Consultation", path: "/services/#business_consultation" },
      { title: "Strategic Planning", path: "/services/#strategic_planning" },
      { title: "Grant Writing", path: "/services/#grant_writing" },
      { title: "Program Development", path: "/services/#program_development" },
      { title: "Leadership Development", path: "/services/#leadership_development" },
      { title: "Other Services", path: "/services/#other_services" },
    ],
  },
  {
    title: "Payment Options",
    path: "/payment_options",
  },
  {
    title: "Testimonials",
    path: "/testimonial",
  },
  {
    title: "Blog",
    path: "/blog",
  },
];
---

<StickyHeader
  class="sticky top-0 border-b z-20 transition-all"
  scrollY={50}
  defaultClass="py-5 border-transparent"
  activeClass="py-2 bg-white/80 border-gray-200 backdrop-blur-lg">
  <Container>
    <div
      class="flex flex-col lg:flex-row justify-between items-center relative z-10"
      transition:animate="none">
      <Astronav>
        <div class="flex w-full lg:w-auto items-center justify-between">
          <a
            href="/"
            class="text-lg flex items-center transition focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-teal-500 focus-visible:outline-none focus-visible:shadow-outline-teal rounded-full px-2 -ml-2">
            <Picture
            class="object-cover"
            formats={["avif", "webp"]}
            src={Logo}
            alt={"Leadership Development Icon"}
            width="175"
            height="175"
            loading="lazy"
          />
          </a>
          <div class="block lg:hidden">
            <MenuIcon class="w-4 h-4 text-gray-800" />
          </div>
        </div>
        <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
          <ul class="flex flex-col lg:flex-row lg:gap-3">
            {
              menuitems.map((item, index) => (
                <>
                  {item.children && (
                    <Dropdown
                      title={item.title}
                      children={item.children}
                      lastItem={index === menuitems.length - 1}
                    />
                  )}

                  {!item.children && (
                    <li>
                      <a
                        href={item.path}
                        class="flex lg:px-3 py-2 text-sm text-gray-600 hover:text-[#307d7e] focus-visible:ring-2 focus-visible:ring-offset-2 transition focus-visible:ring-teal-500 focus-visible:outline-none focus-visible:shadow-outline-teal rounded-full">
                        {item.title}
                      </a>
                    </li>
                  )}
                </>
              ))
            }
          </ul>
          <div class="lg:hidden flex items-center mt-3 gap-4">
            <Link href="/contact" size="md" block>Contact Us</Link>
          </div>
        </MenuItems>
      </Astronav>
      <div>
        <div class="hidden lg:flex items-center gap-4">
          <Link
            href="/contact"
            size="sm"
            class="inline-flex items-center group gap-px">
            <span>Contact Us</span>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 20 20"
              fill="currentColor"
              class="w-4 h-4 mt-px group-hover:translate-x-1 transition-transform">
              <path
                fill-rule="evenodd"
                d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z"
                clip-rule="evenodd"></path>
            </svg>
          </Link>
        </div>
      </div>
    </div>
  </Container>
</StickyHeader>
