---
import { Picture } from "astro:assets";
import FeatureImg1 from "../assets/features/6.png";
import FeatureImg2 from "../assets/features/5.jpg";
import { Icon } from "astro-icon/components";
import Link from "@components/ui/link.astro";

const { nomargin } = Astro.props;
---

<div
  class:list={[
    "max-w-4xl mx-auto flex flex-col items-center justify-center",
    !nomargin && "mt-24",
  ]}>
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight mt-4 text-center">
    Our Services
  </h2>
</div>

<!-- Business Consulting & Strategic Planning -->
<div class="grid md:grid-cols-2 py-10">
  <div class="grid place-items-center">
    <div class="max-w-lg">
      <a href = "/services#business-consultation" class="hover:text-[#307d7e]">
      <h3 class="text-2xl font-medium mt-4 [text-wrap:balance]">
        Business Consultation
      </h3>
      <p class="mt-4 text-slate-600 [text-wrap:balance]">
        This service can cover various aspects of business, including operations, marketing, finance, human resources, and more.
      </p>
    </a>
      <h3 class="text-2xl font-medium mt-4 [text-wrap:balance]">
        Strategic Planning
      </h3>
      <h3 class="text-2xl font-medium mt-4 [text-wrap:balance]">
        Grant Writing
      </h3>
      <h3 class="text-2xl font-medium mt-4 [text-wrap:balance]">
        Program Development
      </h3>
      <h3 class="text-2xl font-medium mt-4 [text-wrap:balance]">
        Leadership Development
      </h3>

      <h3 class="text-2xl font-medium mt-4 [text-wrap:balance]">
        Other Services
      </h3>
    </div>
  </div>

  <div class="grid place-items-center">
    <Picture
      src={FeatureImg1}
      alt="Business Consultation"
      formats={["avif", "webp"]}
      loading="lazy"
    />
  </div>
</div>

<div
  class:list={[
    "mx-auto flex flex-col items-center justify-center",
  ]}>
  <Link href="/contact" size="md" class="inline-flex items-center group gap-px">
    <span>Request Our Services</span>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 20 20"
      fill="currentColor"
      class="w-4 h-4 mt-px group-hover:translate-x-1 transition-transform">
      <path
        fill-rule="evenodd"
        d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z"
        clip-rule="evenodd"></path>
    </svg>
  </Link>
</div>
<br/>